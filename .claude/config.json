  "modelSelection": {
    "rules": [
      {
        "condition": "taskComplexity == 'high' && importanceCritical == true",
        "model": "claude-4-opus-20250514"
      },
      {
        "condition": "taskComplexity == 'medium' && requiresContext == true",
        "model": "claude-3.7-opus-20250101"
      },
      {
        "condition": "taskComplexity == 'medium' && requiresContext == false",
        "model": "claude-3.5-opus-20240321"
      },
      {
        "condition": "taskComplexity == 'low' && requiresPrecision == true",
        "model": "claude-3-sonnet-20240229"
      },
      {
        "condition": "taskComplexity == 'low' && requiresPrecision == false",
        "model": "claude-3-haiku-20240307"
      },
      {
        "condition": "taskType == 'validation' || taskType == 'simple'",
        "model": "claude-2.1"
      }
    ],
    "costOptimization": {
      "enabled": true,
      "preferEfficientModels": true,
      "escalateOnFailure": true
    }
  },
  "permissionMode": "default",
  "verbose": true,
  "directories": {
    "project": "/home/vector_weight/Documents/projects/homelab/homelab-infra",
    "allowed": ["/home/vector_weight/Documents/projects/homelab/homelab-infra"],
    "restricted": ["**/.git/*", "**/node_modules/*", "**/.env", "**/secrets/*"]
  },
  "remote": {
    "host": "kang@REMOTE_IP",
    "sshKeyPath": "~/.ssh/id_ed25519",
    "kubeconfig": "/etc/rancher/k3s/k3s.yaml",
    "sshOptions": ["StrictHostKeyChecking=yes", "BatchMode=yes", "ConnectTimeout=10"]
  },
  "security": {
    "requireGPGSign": true,
    "allowedBranches": ["feature/*", "develop"],
    "protectedBranches": ["main", "develop"],
    "requireReview": true,
    "minReviewers": 1,
    "blockForcePush": true,
    "validateSecrets": true,
    "scanCommits": true
  },
  "workflow": {
    "defaultBranch": "develop",
    "branchPrefix": "feature/",
    "commitMessageFormat": "type(scope): description",
    "allowedTypes": ["feat", "fix", "docs", "style", "refactor", "test", "chore", "ci", "perf"],
    "requireIssueReference": true,
    "conventionalCommits": true
  },
  "automation": {
    "generateDocs": true,
    "runTests": true,
    "lintCode": true,
    "updateChangelog": true,
    "validateK8s": {
      "enabled": true,
      "tools": ["kubeval", "conftest", "kubescore"],
      "policies": ["security", "best-practices", "reliability"]
    },
    "validateHelm": {
      "enabled": true,
      "lint": true,
      "testValues": true
    },
    "monitoring": {
      "enabled": true,
      "prometheus": true,
      "grafana": true,
      "alerting": true
    }
  },
  "tools": {
    "kubernetes": {
      "version": "1.27",
      "distribution": "k3s",
      "validateManifests": true,
      "enforceResourceLimits": true,
      "requireProbes": true
    },
    "helm": {
      "version": "3.12",
      "requireVersion": true,
      "requireValues": true,
      "validateCharts": true
    },
    "terraform": {
      "version": "1.5",
      "validateHCL": true,
      "requireStateBackend": true
    }
  },
  "development": {
    "enforceConventions": true,
    "requireTests": true,
    "coverage": {
      "required": true,
      "minimum": 80
    },
    "documentation": {
      "required": true,
      "validateLinks": true,
      "enforceStructure": true
    }
  },
  "logging": {
    "level": "info",
    "file": ".claude/claude.log",
    "maxSize": "10M",
    "maxFiles": 5,
    "format": "json",
    "modelUsage": {
      "track": true,
      "analyzeEfficiency": true,
      "suggestOptimizations": true
    }
  }
}
