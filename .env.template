# Remote Deployment Configuration
REMOTE_HOST_IP=
REMOTE_USER=
REMOTE_SSH_KEY_PATH=
REMOTE_SSH_PORT=22

# Kubernetes Configuration
K8S_CLUSTER_TYPE=k3s  # or microk8s
K8S_CLUSTER_NAME=homelab-k3s
REMOTE_KUBECONFIG_PATH=/etc/rancher/k3s/k3s.yaml
LOCAL_KUBECONFIG_PATH=${HOME}/.kube/config
K8S_NAMESPACE=homelab

# Resource Defaults
DEFAULT_CPU_LIMIT=24000m
DEFAULT_MEMORY_LIMIT=28Gi
DEFAULT_CPU_REQUEST=500m
DEFAULT_MEMORY_REQUEST=512Mi

# Application Configuration
APP_ENVIRONMENT=development
DEBUG_MODE=false

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_RETENTION_DAYS=7
ENABLE_GRAFANA=true
