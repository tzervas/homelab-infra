# Environment Variables for Homelab Deployment
# Copy to .env and fill in actual values
# Never commit .env files to version control

# Domain Configuration
HOMELAB_DOMAIN=homelab.local
HOMELAB_DEV_DOMAIN=dev.homelab.local
HOMELAB_STAGING_DOMAIN=staging.homelab.local

# Network Configuration
METALLB_IP_RANGE=192.168.16.200-192.168.16.220
GITLAB_IP=192.168.16.201
KEYCLOAK_IP=192.168.16.202
PROMETHEUS_IP=192.168.16.204
GRAFANA_IP=192.168.16.205

# Database Passwords (generate strong passwords)
GITLAB_DB_PASSWORD=
KEYCLOAK_DB_PASSWORD=
PROMETHEUS_DB_PASSWORD=

# Application Admin Passwords (generate strong passwords)
GITLAB_ROOT_PASSWORD=
GRAFANA_ADMIN_PASSWORD=
KEYCLOAK_ADMIN_PASSWORD=

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=gmail.com

# TLS Configuration
TLS_EMAIL=admin@homelab.local

# Backup Configuration
LONGHORN_BACKUP_TARGET=
LONGHORN_BACKUP_SECRET=

# Deployment Configuration
HOMELAB_USER=homelab-deploy
DEPLOYMENT_MODE=rootless

# Kubernetes Configuration
KUBECONFIG=/home/homelab-deploy/.kube/config

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_STDOUT_CALLBACK=yaml
